				{
					"name": "üöÄ Quick Login (Auto OTP)",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Step 1: Request OTP",
									"const baseUrl = pm.environment.get('base_url');",
									"const phoneNumber = pm.environment.get('phone_number') || '+1234567890';",
									"",
									"pm.sendRequest({",
									"    url: baseUrl + '/api/auth/request-otp',",
									"    method: 'POST',",
									"    header: { 'Content-Type': 'application/json' },",
									"    body: {",
									"        mode: 'raw',",
									"        raw: JSON.stringify({ phoneNumber: phoneNumber })",
									"    }",
									"}, function (err, response) {",
									"    if (err) {",
									"        console.error('OTP request failed:', err);",
									"        return;",
									"    }",
									"    const jsonData = response.json();",
									"    if (jsonData.devOtp) {",
									"        pm.environment.set('otp_code', jsonData.devOtp);",
									"        console.log('‚úÖ OTP captured: ' + jsonData.devOtp);",
									"    } else {",
									"        console.log('‚ö†Ô∏è No devOtp in response - production mode?');",
									"    }",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set('jwt_token', jsonData.accessToken);",
									"    console.log('‚úÖ Login successful! Token saved.');",
									"    console.log('User:', jsonData.user ? jsonData.user.firstName + ' ' + jsonData.user.lastName : 'N/A');",
									"} else {",
									"    console.log('‚ùå Login failed:', pm.response.text());",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
